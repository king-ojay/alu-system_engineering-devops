#!/usr/bin/env bash
# Create an SSH key pair with specified details

# Define the key name and passphrase
KEY_NAME="school"
KEY_BITS=4096
PASSPHRASE="betty"

# Generate the RSA key pair
ssh-keygen -t rsa -b $KEY_BITS -f ~/.ssh/$KEY_NAME -N "$PASSPHRASE"

# Check if the key was created successfully
if [ $? -eq 0 ]; then
    echo "RSA key pair created successfully."
    echo "Private key: ~/.ssh/$KEY_NAME"
    echo "Public key: ~/.ssh/$KEY_NAME.pub"
else
    echo "Failed to create RSA key pair."
fi
