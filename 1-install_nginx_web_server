#!/bin/bash
# Update the package list
sudo apt update

# Install Nginx
sudo apt install -y nginx

# Configure Nginx to listen on port 80 and serve a custom page
sudo rm -f /var/www/html/index.html
echo "Holberton School for the win!" | sudo tee /var/www/html/index.html

# Modify the Nginx configuration file to ensure it listens on port 80
sudo sed -i 's/listen 80 default_server;/listen 80;/' /etc/nginx/sites-available/default

# Ensure the configuration is correct
sudo nginx -t

# Restart Nginx without using systemctl (use service instead)
sudo service nginx restart

# Confirm that Nginx is listening on port 80
sudo netstat -tuln | grep :80

